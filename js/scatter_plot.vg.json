{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Monkeypox Active Cases by Population",
    "width": 800,
    "height": 600,
    "description": "A scatterplot showing the monkeypox active cases",
    "data": {
        "url": "https://raw.githubusercontent.com/AllyTeh/FIT3179_Data_Visualisation_2/main/Data/monkeypox_by_country.csv"
    },
    "params": [
        {
            "name": "Population_Above",
            "value": "0",
            "bind": {
                "input": "range",
                "min": 0,
                "max": 100000000,
                "step": 1000000,
                "name": "Minimum Population"
            }
        }
    ],
    "transform": [
        {"filter": "datum.Population > 0"},
        {"filter": "datum.Active > 0"},
        {"filter": "datum.Population > Population_Above"}
    ],
    "mark": "point",
    "encoding": {
        "x": {
            "field": "Active",
            "type": "quantitative",
            "axis": {"tickCount": 7},
            "scale": {
                "type": "log",
                "domain": [
                    1000,
                    20000000000
                ]
            }
        },
        "y": {
            "field": "Population",
            "type": "quantitative",
            "axis": {"tickCount": 7},
            "scale": {
                "type": "log",
                "domain": [
                    1000,
                    10000000000
                ]
            }
        },
        "tooltip": [
            {
                "field": "Country",
                "type": "nominal"
            },
            {
                "field": "Active",
                "type": "quantitative"
            },
            {
                "field": "Population",
                "type": "quantitative"
            }
        ]
    }
}