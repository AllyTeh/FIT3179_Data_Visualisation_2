{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "background": "rgba(0,0,0,0)",
    "padding": 5,
    "width": 180,
    "height": 520,
    "style": "cell",
    "signals": [{"name": "selected_state", "value": "All"}],
    "data": [
      {
        "name": "source_0",
        "url": "https://raw.githubusercontent.com/HYuanAi/FIT3179/master/Malaysian River Pollution/data/rivers_wqi.csv",
        "format": {"type": "csv", "delimiter": ","},
        "transform": [
          {
            "type": "formula",
            "expr": "(datum.WQI_2017 - datum.WQI_2015) / 2",
            "as": "average_change"
          },
          {
            "type": "formula",
            "expr": "if (datum.average_change <-2, 'Healthy', if(datum.average_change > 2, 'Monkeypox cases', 'Suspect Infection'))",
            "as": "Change_categ"
          },
          {
            "type": "aggregate",
            "groupby": ["State", "Change_categ"],
            "ops": ["count"],
            "as": ["count"]
          },
          {
            "type": "joinaggregate",
            "groupby": ["State"],
            "as": ["state_count"],
            "fields": ["count"],
            "ops": ["sum"]
          },
          {
            "type": "formula",
            "expr": "datum.count/datum.state_count*100",
            "as": "percentage"
          },
          {
            "type": "formula",
            "expr": "if(datum.Change_categ === 'Healthy',-1,0) + if(datum.Change_categ==='Suspect Infection',0,0) + if(datum.Change_categ =='Monkeypox cases',1,0)",
            "as": "q_order"
          },
          {
            "type": "formula",
            "expr": "if(datum.Change_categ === 'Healthy', datum.percentage,0) + if(datum.Change_categ === 'Suspect Infection', datum.percentage / 2,0)",
            "as": "signed_percentage"
          },
          {
            "type": "stack",
            "groupby": ["State"],
            "field": "percentage",
            "sort": {"field": ["q_order"], "order": ["ascending"]},
            "as": ["v1", "v2"],
            "offset": "zero"
          },
          {
            "type": "joinaggregate",
            "as": ["offset"],
            "ops": ["sum"],
            "fields": ["signed_percentage"],
            "groupby": ["State"]
          },
          {"type": "formula", "expr": "datum.v1 - datum.offset", "as": "nx"},
          {"type": "formula", "expr": "datum.v2 - datum.offset", "as": "nx2"},
          {
            "type": "filter",
            "expr": "isValid(datum[\"nx\"]) && isFinite(+datum[\"nx\"])"
          }
        ]
      }
    ],
    "marks": [
      {
        "name": "layer_0_marks",
        "type": "rect",
        "style": ["bar"],
        "from": {"data": "source_0"},
        "encode": {
          "update": {
            "height": {"value": 10},
            "fill": {"scale": "color", "field": "Change_categ"},
            "ariaRoleDescription": {"value": "bar"},
            "x": {"scale": "x", "field": "nx"},
            "x2": {"scale": "x", "field": "nx2"},
            "yc": {"scale": "y", "field": "State", "band": 0.5},
            "fillOpacity": {
              "signal": "if(datum.State == selected_state || selected_state == 'All',1,0.3)"
            },
            "tooltip": {
              "signal": "{\"State\": datum[\"State\"], \"Status\": datum[\"Change_categ\"], \"Number of Patients\": format(datum[\"count\"], \"\"), \"Percentage within state\": format(datum[\"percentage\"] / 100, \".2%\")}"
            }
          }
        }
      }
    ],
    "scales": [
      {
        "name": "x",
        "type": "linear",
        "domain": [-100, 100],
        "range": [0, {"signal": "width"}],
        "nice": true,
        "zero": true
      },
      {
        "name": "y",
        "type": "band",
        "domain": {"data": "source_0", "field": "State", "sort": true},
        "range": [0, {"signal": "height"}],
        "padding": 0
      },
      {
        "name": "color",
        "type": "ordinal",
        "domain": ["Healthy", "Suspect Infection", "Monkeypox cases"],
        "range": ["#60492C", "#898B80", "#208AAE"]
      }
    ],
    "axes": [
      {
        "scale": "x",
        "orient": "top",
        "grid": false,
        "domain": false,
        "ticks": false,
        "titleAlign": "center",
        "titleX": 100,
        "labelFlush": true,
        "labelOverlap": true,
        "tickCount": {"signal": "ceil(width/40)"},
        "encode": {
          "labels": {"update": {"text": {"signal": "datum.value + '%'"}}}
        },
        "zindex": 0
      },
      {
        "scale": "y",
        "orient": "left",
        "grid": false,
        "domainColor": "darkgrey",
        "labelAlign": "center",
        "labelBaseline": "middle",
        "labelFontSize": 12,
        "labelOffset": -12,
        "labelPadding": 0,
        "offset": -92,
        "ticks": false,
        "zindex": 0,
        "labelOpacity": {
          "signal": "if(datum.value == selected_state || selected_state == 'All',1,0.3)"
        }
      }
    ],
    "legends": [
      {
        "direction": "vertical",
        "gridAlign": "each",
        "orient": "top",
        "fill": "color",
        "symbolType": "square"
      }
    ]
  }